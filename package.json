    "esbuild": "0.7.13",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "jest": "26.5.0",
    "jest-circus": "26.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
